<div id="banner" class="sign_in_banner">
	<h1>Welcome back, we are here to Serve you again!</h1>
</div>
<!-- <h2>Log in</h2> -->
<div id="form">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs wrapper_skinny"><br>
	    <%= f.input :email, required: false, autofocus: true, class: 'field', placeholder: 'lubwils@example.com' %><br>
	    <%= f.input :password, required: false, class: 'field' %><br>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
    </div>

    <div class="actions">
    	<%= f.button :submit, "Click to Login", class: "button button_highlight button_block" %>
    </div>
	<% end %>

</div>

